<style>
  .btn-style {
    background-color: #fe424d;
    color: white;
    font-size: 1rem;
    border: none;
    border-radius: 2rem;
    padding: 0.5rem 1.2rem;
    transition: background-color 0.3s ease;
  }
  .btn-style i {
    margin-right: 0.5rem;
  }
  .btn-style:hover {
    background-color: #e93c46;
  }
  .search-inp {
    border-radius: 2rem;
    padding: 0.5rem 1rem;
    transition: box-shadow 0.3s ease;
  }
  .search-inp:hover {
    box-shadow: 0 0 8px #fe424d !important;
  }
  .navbar-brand {
    font-weight: bold;
    color: #fe424d !important;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top shadow-sm">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-solid fa-compass-drafting me-2"></i>WanderLust
    </a>

    <!-- Hamburger -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
      data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" 
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      
      <!-- Left Links -->
      <div class="navbar-nav me-auto">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Search Bar -->
      <form class="d-flex me-3" role="search" method="post" action="/listings/search">
        <input class="form-control search-inp me-2" name="country" type="search" placeholder="Search by country" aria-label="Search"/>
        <button class="btn-style" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>Search
        </button>
      </form>

      <!-- Right Links -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Log In</b></a>
        <% } %>
        <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
