<% layout("/layouts/boilerplate.ejs")%>
<body>
    

<div class="row">
    <div class="col-8 offset-2">
      <br><br>
    <h1>Edit Your Listing</h1>
     <form method= "post" action="/listings/<%= listing._id%>?_method=PUT" class="needs-validation" enctype="multipart/form-data" novalidate>
         <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title%>" class="form-control" required>
            <div class="valid-feedback">Title Looks Good !</div>
         </div>
        <br>
        <div>
            <label for="description" class="form-label">Description</label><br>
            <textarea name="listing[description]" rows="10" cols="50" class="form-control" required><%= listing.description%></textarea>
            <div class="invalid-feedback">Please enter short description</div>
        </div>
        
        <br>
        <div>
             Original Listing Image:<br>
            <img src="<%= originalImageUrl %>">
        </div><br>
        <div>
            <label for="image" class="form-label">Upload New Image</label><br>
            <input type="file" name="listing[image][url]" value="<%= listing.image.url%>" class="form-control">
            <div class="invalid-feedback">Please enter valid image link</div>
        </div>
        
        <br>
        <div class="row">
         <div class="col-lg-4 col-sm-12">
            <label for="price" class="form-label">Price</label><br>
            <input type="number" name="listing[price]" value="<%= listing.price%>" class="form-control" required>
            <div class="invalid-feedback">Price should be valid</div>
        </div>
        
        <br>
        <div class="col-lg-8 col-sm-12">
            <label for="location" class="form-label">Location</label><br>
            <input type="text" name="listing[location]" value="<%= listing.location%>"  class="form-control" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        </div>
         
        <br>
        <div>
            <label for="title" class="form-label">country</label><br>
            <input type="text" name="listing[country]" value="<%= listing.country%>" class="form-control" required>
            <div class="invalid-feedback">Country should be valid</div>
        </div>
        <div>
            <label for="title" class="form-label mt-2">Category</label><br>
            <select name="listing[categories]" required class="form-control">
  <option value="">Select category</option>
  <option value="Trending">Trending</option>
  <option value="Rooms">Rooms</option>
  <option value="Iconic Cities">Iconic Cities</option>
  <option value="Mountains">Mountains</option>
  <option value="Castles">Castles</option>
  <option value="Amazing pools">Amazing pools</option>
  <option value="Camping">Camping</option>
  <option value="Farms">Farms</option>
  <option value="Arctic">Arctic</option>
  <option value="Play">Play</option>
  <option value="Boats">Boats</option>
</select>

        </div>
     
     
        <br><br>
        <button class="btn btn-dark add-button">Edit</button> 
        <br><br><br><br>
    </form>
    
</body>
</div>
</div>
