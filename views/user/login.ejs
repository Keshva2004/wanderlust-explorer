<% layout("/layouts/boilerplate.ejs")%>

<div class="row mt-6">
    <h1 class="col-6 offset-3 mt-5">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation mt-3" novalidate>
            <div class="mb-4">
            <label for="username" class="form-label">Username</label>
            <input 
            type="text", 
            name="username",
            id="username",
            class="form-control" required>
            </div>
            <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <input 
            type="password" 
            name="password",
            id="password",
            class="form-control" required>
            </div>
            <div class="mb-4">
                <button class="btn btn-success">Login</button> 
            </div>
        </form>
    </div>
</div>