<% layout("/layouts/boilerplate.ejs")%>

<div class="row mt-6">
    <h1 class="col-6 offset-3 mt-5 mb-3">Signup on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation mt-5" novalidate>
            <div class="mb-4">
            <label for="username" class="form-label">Username</label>
            <input 
            type="text", 
            name="username",
            id="username",
            class="form-control" required>
            <div class="valid-feedback">Looks Good !</div>
            </div>
            <div class="mb-4">
            <label for="email" class="form-label">Email</label>
            <input 
            type="email", 
            name="email",
            id="email",
            class="form-control" required>
            </div>
            <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <input 
            type="password" 
            name="password",
            id="password",
            class="form-control" required>
            </div>
            <div class="mb-4">
                <button class="btn btn-success">Sign Up</button> 
            </div>
        </form>
    </div>
</div>